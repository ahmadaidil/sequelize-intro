<%- include layout/head %>
  <% if(user.role == 'headmaster'){ %>
    <h3 style="color:red"><%= err.message %></h3>
    <form class="" action="/users" method="post">
      <input type="text" name="username" value="" placeholder="username">
      <input type="password" name="password" value="" placeholder="password">
      <select class="" name="role">
        <option value="teacher">Teacher</option>
        <option value="academic">Academic</option>
        <option value="headmaster">Headmaster</option>
      </select>
      <input type="submit" name="" value="Submit">
    </form><br><br>
    <table border="1">
      <thead>
        <th>User id</th>
        <th>Username</th>
        <th>Password</th>
        <th>Role</th>
        <th>Action</th>
      </thead>
      <% users.forEach(user=>{ %>
      <tbody>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.role %></td>
        <!-- <td><%= user.private_key %></td> -->
        <td><a href="/users/delete/<%=user.id%>">Delete</a></td>
      </tbody>
      <% }) %>
    </table>
  <% }else{ %>
    <h2>Sorry, you don't have permission to access this page</h2>
  <% } %>
<%- include layout/foot %>
