<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Students</title>
  </head>
  <body>
    <h1>Students Data</h1>
    <a href="/students/add">Add student</a><br><br>
    <table border="1">
      <thead>
        <th>No.</th>
        <th>Student Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Full Name</th>
        <th>Email</th>
        <th colspan="3">Actions</th>
      </thead>
      <% let index = 1 %>
      <% data.forEach(d=>{ %>
      <tbody>
        <td><%= index %></td>
        <td><%= d.id %></td>
        <td><%= d.first_name %></td>
        <td><%= d.last_name %></td>
        <td><%= d.full_name %></td>
        <td><%= d.email %></td>
        <td><a href="/students/<%= d.id %>/addsubject">Add Subject</a></td>
        <td><a href="/students/edit/<%= d.id %>">Edit</a></td>
        <td><a href="/students/delete/<%= d.id %>">Delete</a></td>
      </tbody>
      <% index++ }) %>
    </table>
  </body>
</html>
