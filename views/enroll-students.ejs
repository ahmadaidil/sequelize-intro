<%- include layout/head %>
  <% if(user.role == 'academic' || user.role == 'headmaster'){ %>
    <a href="/subjects">return to subject list</a><br><br>
    <table border="1">
      <thead>
        <th>No.</th>
        <th>Name</th>
        <th>Score by number</th>
        <th>Score by letter</th>
      </thead>
      <% let index = 1 %>
      <% students.forEach(student=>{ %>
      <tbody>
        <td><%= index %></td>
        <td><%= student.full_name %></td>
        <% if (student.students_subject.score != null) { %>
          <td><%= student.students_subject.score %></td>
        <% } else { %>
          <td><a href="/subjects/<%= student.students_subject.subjectId %>/givescore/<%= student.id %>">Give Score</a></td>
        <% } %>
        <td><%= student.letterScore %></td>
      </tbody>
      <% index++ }) %>
    </table>
  <% }else{ %>
    <h2>Sorry, you don't have permission to access this page</h2>
  <% } %>
<%- include layout/foot %>
